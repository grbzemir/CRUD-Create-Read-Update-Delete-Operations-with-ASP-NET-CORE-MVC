@model MvcCrud.Models.Student
@{
    ViewData["Title"] = "Student";
}
<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="Create" asp-controller="Home" autocomplete="off">
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <input type="text" asp-for="Surname" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input type="number" asp-for="Age" class="form-control" required />
    </div>
    <div class="form-group mt-2">
        @if (Model?.Id == 0 || Model == null)
        {
            <button type="submit" class="btn btn-primary">Create</button>
        }
        else
        {
            <button type="submit" class="btn btn-success">Update</button>
        }
    </div>
</form>
